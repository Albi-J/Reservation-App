<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_notiActTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"

        android:text="알림"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/textView_notiActID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView_notiActTitle"
        app:layout_constraintLeft_toLeftOf="@id/editText_notiActID"
        android:layout_marginTop="30dp"

        android:text="사용자 이메일"
        android:textSize="10dp"/>

    <EditText
        android:id="@+id/editText_notiActID"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView_notiActID"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:hint="E-mail"
        android:inputType="textEmailAddress"/>

    <TextView
        android:id="@+id/textView_notiActText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editText_notiActID"
        app:layout_constraintLeft_toLeftOf="@id/editText_notiActText"
        android:layout_marginTop="30dp"

        android:text="보낼 메시지"
        android:textSize="10dp"/>

    <EditText
        android:id="@+id/editText_notiActText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView_notiActText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:hint="Text"/>

    <Button
        android:id="@+id/button_notiActSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/editText_notiActText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"

        android:text="알림 전송"/>

</androidx.constraintlayout.widget.ConstraintLayout>

